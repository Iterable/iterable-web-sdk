{
	"presets": [
		"@babel/preset-env",
        "@babel/preset-react",
		"@babel/preset-typescript"
	],
	"ignore": [
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.ts"
	],
	"plugins": [
		"@babel/proposal-class-properties",
		"@babel/proposal-object-rest-spread",
		"@babel/plugin-proposal-optional-chaining",
		["@babel/transform-runtime", {
			"regenerator": true
		}],
		"@babel/plugin-transform-modules-umd",
		[
			"module-resolver",
			{
				"root": [
					"."
				],
				"extensions": [
					".ts",
					".tsx",
					".js",
					".jsx",
					".es",
					".es6",
					".mjs"
				]
			}
		]
	]
}